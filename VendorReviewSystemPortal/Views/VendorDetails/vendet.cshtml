
@section head{
    <style type="text/css">
    body
    {
        
        background-image:url('/images/signup2.jpg');
        background-size:cover;
        background-repeat:no-repeat;
        background-position:center;
        margin:auto;
        
        
        
    }
    #customers {
   font-family: Arial, Helvetica, sans-serif;
   border-collapse: collapse;
   width: 100%;
}

 #customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

 #customers tr:nth-child(even){background-color: #f2f2f2;}

 #customers tr:hover {background-color: #ddd;}

 #customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #04AA6D;
  color: white;
}
    
    </style>
}

<h1>Vendor Details</h1>
<br/>
<div class="container">
    <table class="table table-bordered table-hover" id="customers">
        <tr class="bg-primay text-dark">
            <th>UserID</th>
          <th>Name</th>
          <th>EmailID</th>
          <th>WebsiteID</th>
          <th>Location</th>
          <th>Actions</th>
        </tr>
        @{
            try
            {
                if(TempData["vend"]!=null)
                {
                    foreach(var x in (List<VendorReviewSystemPortal.Models.Vendor>)TempData["vend"])
                    {
                        <tr>
                        <td>@x.UserID</td>
                        <td>@x.Name</td>
                        <td>@x.EmailID</td>
                        <td>@x.WebsiteID</td>
                        <td>@x.Location</td>
                        <td>
                        <a href="~/VendorDetails/activate" class="btn btn-success">Activate</a>
                        <a href="~/VendorDetails/deactivate?id=@x.UserID" class="btn btn-warning" style="margin-left:3%">Deactivate</a>
                        <a href="~/VendorDetails/delete?id=@x.UserID" class="btn btn-danger" style="margin-left:3%">Delete</a>
                        
                        </td>
                        </tr>
                    }
                }
            }
            catch
            {
                
            }
        }
    </table>
</div>
