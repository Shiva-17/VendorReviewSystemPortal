@model VendorReviewSystemPortal.Models.FoodieReview

@{
    ViewData["Title"] = "edit";
}
@section head{
    <style type="text/css">
    body
    {
        
        background-image:url('/images/signup2.jpg');
        background-size:cover;
        background-repeat:no-repeat;
        background-position:center;
        margin:auto;
        
        
        
    }
    
    </style>
}

<h4>FoodieReview</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="FoodieUserID" class="control-label"></label>
                <input asp-for="FoodieUserID" class="form-control" />
                <span asp-validation-for="FoodieUserID" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="FoodieName" class="control-label"></label>
                <input asp-for="FoodieName" class="form-control" />
                <span asp-validation-for="FoodieName" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="FoodieMobileNo" class="control-label"></label>
                <input asp-for="FoodieMobileNo" class="form-control" />
                <span asp-validation-for="FoodieMobileNo" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="FoodieDateofVisit" class="control-label"></label>
                <input asp-for="FoodieDateofVisit" class="form-control" />
                <span asp-validation-for="FoodieDateofVisit" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="FoodieDateofReview" class="control-label"></label>
                <input asp-for="FoodieDateofReview" class="form-control" />
                <span asp-validation-for="FoodieDateofReview" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="VendorUserID" class="control-label"></label>
                <input asp-for="VendorUserID" class="form-control" />
                <span asp-validation-for="VendorUserID" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="VendorName" class="control-label"></label>
                <input asp-for="VendorName" class="form-control" />
                <span asp-validation-for="VendorName" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="VendorLocation" class="control-label"></label>
                <input asp-for="VendorLocation" class="form-control" />
                <span asp-validation-for="VendorLocation" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="FoodiesReview" class="control-label"></label>
                <input asp-for="FoodiesReview" class="form-control" />
                <span asp-validation-for="FoodiesReview" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="FoodieRating" class="control-label"></label>
                <input asp-for="FoodieRating" class="form-control" />
                <span asp-validation-for="FoodieRating" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="~/FoodieViewRev/foovierev">Back to View Review</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{
    try
    {
        
            if(TempData["Edit rev"]=="1")
            {
                <script>
                    swal("Good job!", " Your Review Edited Successfully !","success");
                </script>
            }
        
    }
    catch
    {
        
    }
}